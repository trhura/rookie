<?xml version="1.0" ?>
<schemalist>
  <enum id="finish-action">
    <value nick="do-nothing" value="0" />
    <value nick="open-file" value="1" />
    <value nick="open-folder" value="2" />
  </enum>
  <schema id="net.launchpad.rookie" path="/apps/rookie/" gettext-domain="rookie">
    <key name="show-toolbar" type="b">
      <default>true</default>
      <description>Whether to show the toolbar.</description>
    </key>
    <key name="show-statusbar" type="b">
      <default>true</default>
      <description>Whether to show the statusbar.</description>
    </key>
    <key name="show-sidebar" type="b">
      <default>true</default>
      <description>Whether to show the sidebar.</description>
    </key>
    <key name="show-bottompane" type="b">
      <default>true</default>
      <description>Whether to show the bottonpane.</description>
    </key>
    <key name="show-dropzone" type="b">
      <default>false</default>
      <description>Whether to show the dropzone.</description>
    </key> 
    <key name="start-minimized" type="b">
      <default>true</default>
      <description>Hide the main window when the application starts.</description>
    </key>
    <key name="start-new-downloads" type="b">
      <default>true</default>
      <description>Whether to start downloads automatically when they are added.</description>
    </key> 
  </schema>
  <schema id="net.launchpad.rookie.state" path="/apps/rookie/state/" gettext-domain="rookie">
    <key name="window-width" type="i">
      <default>700</default>
      <description>Width of the main window.</description>
    </key> 
    <key name="window-height" type="i">
      <default>450</default>
      <description>Height of the main window.</description>
    </key>
    <key name="dropzone-width" type="i">
      <default>100</default>
      <description>Width of the drop zone.</description>
    </key> 
    <key name="dropzone-height" type="i">
      <default>100</default>
      <description>Height of the drop zone.</description>
    </key>
    <key name="window-xpos" type="i">
      <default>100</default>
      <description>x pos of the main window.</description>
    </key>
    <key name="window-ypos" type="i">
      <default>100</default>
      <description>y pos of the main window.</description>
    </key>
    <key name="dropzone-xpos" type="i">
      <default>100</default>
      <description>x pos of the drop zone.</description>
    </key> 
    <key name="dropzone-ypos" type="i">
      <default>100</default>
      <description>y pos of drop zone.</description>
    </key>
    <key name="sidebar-width" type="i">
      <default>200</default>
      <description>Width of the sidebar.</description>
    </key>
    <key name="bottompane-width" type="i">
      <default>150</default>
      <description>Width of the bottompane.</description>
    </key>
  </schema>
</schemalist>
